{% extends 'base.html.twig' %}
{% block body %}
  <h1 class="text-center">All information about the Event!</h1>
  <div class="card mt-3 detail">
 			<img class="img-fluid" src="../img/{{event.img}}" alt="img">
  			<div class="card-body">
  				<p class="h1">{{event.name}}</p>  			
  				<p class="mt-3"><span class="font-weight-bold">Datum:</span> 
              <br>
              {{event.day|date("F jS Y")}}
          </p>
  				<p><span class="font-weight-bold">Einlass ab:</span> 
              <br> 
              {{event.start|date("H:i")}} Uhr
          </p>
  				<p><span class="font-weight-bold">Auf was kann ich mich einlassen?:</span> 
              <br>
              {{event.description}}
          </p>
  				<p><span class="font-weight-bold">KapazitÃ¤t:</span> 
              <br>
              {{event.capacity}}
          </p>
  				<p><span class="font-weight-bold">Kartenreservierung:</span> 
              <br>
            {{event.email}}
          </p>
  				<p><span class="font-weight-bold">Telefonnummer:</span> 
              <br>
              {{event.phone}}
          </p>
  				<p><span class="font-weight-bold">Veranstaltungsort:</span> 
              <br>
            {{event.address}}
          </p>
  				<p><span class="font-weight-bold">Homepage:</span> 
              <br>
              <a href="{{event.url}}">{{event.url}}</a>
          </p>
  				<p><span class="font-weight-bold">Spate:</span> 
              <br>
              {{event.type}}
          </p>
  			</div>
  			<div class="d-flex justify-content-around">  				
				<p><a href="/update/{{event.id}}" class="btn btn-warning">Edit</a></p>
				<p><a href="/delite/{{event.id}}" class="btn btn-danger">Delete</a></p>
  			</div>  			
		</div>

  <!-- <p>{{event.address}}</p> -->

  <a class="btn btn-default text-center" href="/">Back to Events</a>
{% endblock %}