{% extends 'base.html.twig' %}

{% block title %}Create new Event{% endblock %}	

{% block body %}	
 	<h1 class="text-center">All Events in Vienna!</h1>
	<div class="row justify-content-around">
	{% for event in events %}
		
 		<div class="card mt-3">
 			<img class="img-fluid" src="../img/{{event.img}}" alt="img">
  			<div class="card-body">
  			<p class="h2 text-danger">{{event.name}}</p>
  			<p class="h6"><span class="font-weight-bold">Veranstaltungstag/e:</span> 
              				<br>
  							{{event.day|date("F jS Y")}}
  			</p>
  			<p class="h6"><span class="font-weight-bold">Einlass ab:</span> 
              				<br>
  							{{event.start|date("H:i")}}
  			</p>  			
  			</div>
  			<div class="d-flex justify-content-around">
  				<p><a href="/details/{{event.id}}" class="btn btn-info">View</a></p>
				<p><a href="/update/{{event.id}}" class="btn btn-warning">Edit</a></p>
				<p><a href="/delite/{{event.id}}" class="btn btn-danger">Delete</a></p>
  			</div>
		</div>
	
	{% endfor %}
	</div>	
	
{% endblock %}
