{% extends 'base.html.twig' %}

{% block title %}Hello EventsController!{% endblock %}

{% block body %}
	<div class="row">
 		

	{% for event in events %}
		<div class="col-lg-6">
 		<div class="card">
 			<img class="img-fluid" src="" alt="img">
  			<div class="card-body">
  				{{event.name}}
  				{{event.description}}
  			</div>
  			<div class="d-flex justify-content-around">
  				<p><a href="/details/{{event.id}}" class="btn btn-success">View</a></p>
				<p><a href="/update/{{event.id}}" class="btn btn-default">Edit</a></p>
				<p><a href="/delite/{{event.id}}" class="btn btn-danger">Delete</a></p>
  			</div>
		</div>
	</div>
	{% endfor %}
		
	</div>
{% endblock %}
